---
import Button from "../components/Button.astro";
import Nav from "../components/Nav.astro";
import Topbar from "../components/Topbar.astro";
---

<Topbar />
<header class="header">
  <div class="header__container">

    <a href="/" class="header__logo">HØJSKOLENDK</a>

<Nav />

    <div class="header__handlinger">
      <a href="/infomoede"><Button title="Infomøde" variant="secondary" /></a>
      <Button title="Bestil ophold" variant="primary" />
    </div>

  </div>
</header>

<style>
  .header {
    background: var(--color-bg-primary);
    border-bottom: 1px solid #eee;
  }

  .header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: white;
}


  .header__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.7rem 2.2rem;

    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header__logo {
    font-weight: 800;
    text-decoration: none;
    color: black;
  }

  .header__handlinger {
    display: flex;
    gap: 0.75rem;
  }
</style>
