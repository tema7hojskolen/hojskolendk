---
import Button from "../components/Button.astro";
---

<header class="header">
  <div class="header__container">

    <a href="/" class="header__logo">HØJSKOLENDK</a>

    <nav class="header__nav">
      <a href="#">Rejsekalender</a>
      <a href="#">Højskoleophold</a>
      <a href="#">Sommerhøjskole</a>
      <a href="#">Priser</a>
      <a href="/about">Om os</a>
      <a href="/contact">Kontakt os</a>
    </nav>

    <div class="header__handlinger">
      <a href="/infomoede"><Button title="Infomøde" variant="secondary" /></a>
      <Button title="Bestil ophold" variant="primary" />
    </div>

  </div>
</header>

<style>
  .header {
    background: white;
    border-bottom: 1px solid #eee;
  }

  .header__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;

    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header__logo {
    font-weight: 800;
    text-decoration: none;
    color: black;
  }

  .header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .header__nav a {
    text-decoration: none;
    color: black;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .header__handlinger {
    display: flex;
    gap: 0.75rem;
  }
</style>
