---
import Button from "./Button.astro";

const { baggrund = "/images/infomoede-hero.jpeg" } = Astro.props;

const rejser = [
  "Maldiverne, Sri Lanka, Bali, Gili Islands, Japan, Australien",
  "Brasilien, Colombia, Costa Rica, Mexico",
  "Australien, New Zealand, Vietnam, Bali, Gili Islands, Lombok",
  "Hawaii, Australien, Japan, Bali, Gili Islands",
  "Maldiverne, Sri Lanka, Bali, Gili Islands",
];
---

<section class="infomoede-hero" style={`background-image: url("${baggrund}");`}>
  <div class="infomoede-hero__overlay"></div>

  <div class="infomoede-hero__container">
    <h1 class="infomoede-hero__titel">INFOMØDER - HØJSKOLE I UDLANDET</h1>
    <p class="infomoede-hero__subtitel">VI GLÆDER OS TIL AT MØDE DIG!</p>

    <form class="infomoede-form">
      <div class="infomoede-form__grid">

        <label class="felt">
          <span class="felt__label">Fornavn</span>
          <input class="felt__input" name="fornavn" autocomplete="given-name" />
        </label>

        <label class="felt">
          <span class="felt__label">Hvilket ophold er du interesseret i?</span>
          <select class="felt__input" name="rejse">
            <option value="">Vælg rejse…</option>
            {rejser.map((r) => <option value={r}>{r}</option>)}
          </select>
        </label>

        <label class="felt">
          <span class="felt__label">Efternavn</span>
          <input class="felt__input" name="efternavn" autocomplete="family-name" />
        </label>

        <label class="felt">
          <span class="felt__label">Tlf.nr.</span>
          <input class="felt__input" name="telefon" type="tel" autocomplete="tel" placeholder="+45" />
        </label>

        <label class="felt">
          <span class="felt__label">E-mail</span>
          <input class="felt__input" name="email" type="email" autocomplete="email" />
        </label>

        <div class="felt felt--actions">
          <Button title="Send" variant="primary" />
        </div>

      </div>
    </form>
  </div>
</section>

<style>
  .infomoede-hero {
    position: relative;
    min-height: 70vh;
    background-size: cover;
    background-position: center;
    padding: 60px 20px;
  }

  .infomoede-hero__overlay {
    position: absolute;
    inset: 0;
    background: rgba(255,255,255,0.55);
  }

  .infomoede-hero__container {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    text-align: center;
  }

  .infomoede-hero__titel {
    margin: 0 0 8px;
    font-weight: 900;
    text-transform: uppercase;
  }

  .infomoede-hero__subtitel {
    margin: 0 0 28px;
    font-weight: 800;
    text-transform: uppercase;
    opacity: 0.75;
  }

  .infomoede-form__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 18px 60px;
    text-align: left;
    max-width: 980px;
    margin: 0 auto;
  }

  .felt {
    display: grid;
    gap: 8px;
  }

  .felt__label {
    font-weight: 700;
  }

  .felt__input {
    height: 44px;
    border-radius: 999px;
    border: none;
    padding: 0 16px;
    width: 100%;
  }

  .felt--actions {
    align-items: end;
  }
</style>
